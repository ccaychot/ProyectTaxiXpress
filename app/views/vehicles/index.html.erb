<h1>Listing Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Licenseplate</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Manufacturingyear</th>
      <th>Weight</th>
      <th>Width</th>
      <th>Grossweight</th>
      <th>Dryweight</th>
      <th>Usefulload</th>
      <th>Typeofvehicle</th>
      <th>Datesoat</th>
      <th>Datetechnicalreview</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.licenseplate %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.manufacturingyear %></td>
        <td><%= vehicle.weight %></td>
        <td><%= vehicle.width %></td>
        <td><%= vehicle.grossweight %></td>
        <td><%= vehicle.dryweight %></td>
        <td><%= vehicle.usefulload %></td>
        <td><%= vehicle.typeofvehicle %></td>
        <td><%= vehicle.datesoat %></td>
        <td><%= vehicle.datetechnicalreview %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

